<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Full Regression Suite Product Details" verbose="1">
    <test name="Open a Product Item Test in Edge">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="com.tests.product.ProductDetailsTests">
                <methods>
                    <include name="productsPage_clickOnAProduct_redirectToTheProductDetails"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Open a Product Item Test in Firefox">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.tests.product.ProductDetailsTests">
                <methods>
                    <include name="productsPage_clickOnAProduct_redirectToTheProductDetails"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Open a Product Item Test in Chrome">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.tests.product.ProductDetailsTests">
                <methods>
                    <include name="productsPage_clickOnAProduct_redirectToTheProductDetails"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Starting Add To Cart Product Item Test in Firefox">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.tests.product.ProductDetailsTests">
                <methods>
                    <include name="productDetails_clickOnAddToCart_productIsAddedInTheCart"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Starting Add To Cart Product Item Functionality Test in Edge">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="com.tests.product.ProductDetailsTests">
                <methods>
                    <include name="productDetails_clickOnAddToCart_productIsAddedInTheCart"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Add To Cart Product Item Test in Chrome">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.tests.product.ProductDetailsTests">
                <methods>
                    <include name="productDetails_clickOnAddToCart_productIsAddedInTheCart"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Back To Products Test in Edge">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="com.tests.product.ProductDetailsTests">
                <methods>
                    <include name="productsDetails_clickOnBackToProducts_redirectToProductsPage"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Back To Products Test in Firefox">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.tests.product.ProductDetailsTests">
                <methods>
                    <include name="productsDetails_clickOnBackToProducts_redirectToProductsPage"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>