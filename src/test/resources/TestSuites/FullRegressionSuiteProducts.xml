<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Full Regression Suite Products" verbose="1">
    <test name="Sort Dropdown Descending Test in Chrome">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.tests.products.ProductsTests">
                <methods>
                    <include name="productsDropdownFilter_sortDescendingByPrice_productsSortedDescendingByPrice"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Sort Dropdown Descending Test in Firefox">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.tests.products.ProductsTests">
                <methods>
                    <include name="productsDropdownFilter_sortDescendingByPrice_productsSortedDescendingByPrice"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Sort Dropdown Ascending Test in Edge">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="com.tests.products.ProductsTests">
                <methods>
                    <include name="productsDropdownFilter_sortAscendingByPrice_productsSortedAscendingByPrice"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Sort Dropdown Ascending Test in Firefox">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.tests.products.ProductsTests">
                <methods>
                    <include name="productsDropdownFilter_sortAscendingByPrice_productsSortedAscendingByPrice"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Add To Cart Test in Chrome">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.tests.products.ProductsTests">
                <methods>
                    <include name="products_clickOnAddToCart_productIsAddedInTheCart"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Add To Cart Test in Edge">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="com.tests.products.ProductsTests">
                <methods>
                    <include name="products_clickOnAddToCart_productIsAddedInTheCart"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Add To Cart Test in Firefox">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.tests.products.ProductsTests">
                <methods>
                    <include name="products_clickOnAddToCart_productIsAddedInTheCart"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Clicking Product Item Functionality Test in Firefox">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.tests.products.ProductsTests">
                <methods>
                    <include name="productItemFunctionality"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>